{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./",
    "lib": [
      "DOM",
      "ES2020"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
